<h1>Products</h1>

<table class="table table-bordered table-striped">
    <thead>
      <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Price</th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |product|}}
        <tr>
            <th>{{product.id}}</th>
            <td>{{product.name}}</td>
            <td>{{product.price}}</td>
        </tr>
    {{/each}}

    </tbody>
</table>
